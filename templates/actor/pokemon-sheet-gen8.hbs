                      </div>
                    </div>
                </div>
              </div>
              <div class="col">
                <!-- Skills -->
                  <div class="swsh-box mt-auto w-100 mb-2">
                    <div class="swsh-header skill skill-block">
                      <div class="row no-gutters header w-100">
                        <div class="col-sm-4 pt-2 pb-2">{{localize "PTU.SkillLabel"}}</div>
                        <div class="col mt-2 mb-2">{{localize "PTU.SkillMod"}}</div>
                        <div class="col-sm-3 mt-2 mb-2">{{localize "PTU.SkillRank"}}</div>
                        <div class="col-sm-2 mt-2 mb-2">{{localize "PTU.SkillValue"}}</div>
                        <div class="col mt-2 mb-2">{{localize "PTU.SkillDice"}}</div>
                      </div>
                    </div>
                    <div class="swsh-body p-0">
                      <div class="w-100 skills skill-block">
                        {{#each data.skills as |skill key|}}
                        <div class="row no-gutters {{key}} align-items-center">
                          <div class="skill {{key}} col-sm-4 bgcolor key type--{{skill.type}} align-self-center">
                            <label for="data.skills.{{key}}.label" class="resource-label">{{skill.label}}</label>
                          </div>
                          <div class="skill {{key}} col pl-1 pr-1 fs-9 center-text">
                            {{> "systems/ptu/templates/partials/mod-field.hbs" 
                              path=(concat "data.skills." key ".modifier.value") 
                              value=skill.modifier.value
                              dtype="Number" 
                              mod=skill.modifier.mod
                              total=skill.modifier.total
                              modOrigins=(getProperty ../origins (concat "data.skills." key ".modifier.mod") )
                              disabled=true
                              flipped=(gt 8 @index)}}
                          </div>
                          <div class="skill {{key}} col-sm-3 align-self-center bgcolor skill--{{skill.rank}} center-text">
                            <label for="data.skills.{{key}}.rank" class="resource-label">{{localize (concat "PTU.Skill" skill.rank)}}</label>
                          </div>
                          <div class="skill {{key}} col pl-1 fs-9 center-text">
                            {{> "systems/ptu/templates/partials/mod-field.hbs" 
                              path=(concat "data.skills." key ".value.value") 
                              value=skill.value.value
                              dtype="Number" 
                              mod=skill.value.mod
                              total=skill.value.total
                              modOrigins=(getProperty ../origins (concat "data.skills." key ".value.mod") )
                              disabled=true
                              flipped=(gt 8 @index)}}
                          </div>
                          <div class="skill {{key}} col-sm-2 align-self-center bgcolor fs-9 center-text rollable"
                            data-roll="{{skill.value.total}}d6{{#if skill.modifier.total}}+{{skill.modifier.total}}{{/if}}"
                            data-label="{{skill.label}}">
                            <i class="fas fa-dice-d20"></i>
                            <label for="data.skills.{{key}}.value"
                              class="resource-label">{{skill.value.total}}d6{{#if skill.modifier.total}}+{{skill.modifier.total}}{{/if}}</label>
                          </div>
                        </div>
                        {{/each}}
                      </div>
                    </div>
                  </div>
              </div>
            </div>
