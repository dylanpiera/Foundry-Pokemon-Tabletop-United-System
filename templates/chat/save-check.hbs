<div class="content flexrow pt-1" style="font-variant: normal;">
    <div class="swsh-box">
        <div class="swsh-header" style="text-align: center;">
            <div class="d-flex w-100 mt-1 mb-1 justify-content-center">
                <span class="{{#if (isdefined success)}}{{#if success}}success{{else}}failure{{/if}}{{/if}}" style="padding: 5px;">{{{title}}}</span>
            </div>
        </div>
        <div class="swsh-body">
            {{#if roll}}
                <div class="dice-roll w-100" style="padding: 10px 5px;">
                    <div class="dice-result">
                        <div class="dice-formula">  
                            {{#each roll.terms as | term |}}
                                {{#if term.faces}}
                                    {{#each term.results as |result|}}<span class="roll die d{{term.faces}} {{minMaxDiceCheck result.result term.faces}}">{{result.result}}</span>{{#if @last}}{{else}}+{{/if}}{{/each}}
                                {{else}}{{term}}{{/if}}
                            {{/each}}
                        </div>
                        <span class="dice-total" style="display: inline-flex;justify-content: space-evenly; align-items: center;width:100%;"><h4 class="num-total">{{roll._total}}</h4></span>
                    </div>
                </div>
            {{/if}}
            {{#if description}}
                <div class="w-100 p-2 fs-11 {{#if (isdefined success)}}{{#if success}}success{{else}}failure{{/if}}{{/if}}" style="border-top:1px solid #00000080; word-break: break-word;">
                    {{{description}}}
                </div>
            {{/if}}
        </div>
    </div>
</div>