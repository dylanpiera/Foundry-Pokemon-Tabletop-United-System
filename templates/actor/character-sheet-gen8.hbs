                        <label for="data.modifiers.damageReduction.special.value">Special</label>
                      </div>
                    </div>
                  </div>
                  <div class="swsh-body">
                    <div class="d-flex w-100 mt-1 mb-1">
                      <div class="col-sm-6">
                        {{> "mod-field" 
                          mod=data.modifiers.damageReduction.physical.mod 
                          path="data.modifiers.damageReduction.physical.value" 
