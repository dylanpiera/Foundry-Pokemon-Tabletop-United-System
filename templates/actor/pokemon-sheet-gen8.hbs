                      <h3>{{localize "PTU.SkillBackground"}}</h3>
                    </div>
                  </div>
                  <div class="swsh-header">
                    <div class="d-flex w-100 mt-1 mb-1">
                      <div class="col-sm-4">
                        <label for="data.background.increased.one">{{localize "PTU.SkillUp"}} 1:</label>
                      </div>
                      <div class="col-sm-4">
                        <label for="data.background.increased.two">{{localize "PTU.SkillUp"}} 2:</label>
                      </div>
                      <div class="col-sm-4">
                        <label for="data.background.increased.three">{{localize "PTU.SkillUp"}} 3:</label>
                      </div>
                    </div>
                  </div>
                  <div class="swsh-body">
                    <div class="d-flex w-100 mt-1 mb-1 fs-9">
                      <div class="col-sm-4">
                        {{#select data.background.increased.one}}
                        <select name="data.background.increased.one">
                          <option value="blank">{{localize "PTU.SelectNone"}}</option>
                          {{#each skills as | skill key |}}
                          <option value="{{key}}">{{skill.label}}</option>
                          {{/each}}
                        </select>
                        {{/select}}
                      </div>
                      <div class="col-sm-4">
                        {{#select data.background.increased.two}}
                        <select name="data.background.increased.two">
                          <option value="blank">{{localize "PTU.SelectNone"}}</option>
                          {{#each skills as | skill key |}}
                          <option value="{{key}}">{{skill.label}}</option>
                          {{/each}}
                        </select>
                        {{/select}}
                      </div>
                      <div class="col-sm-4">
                        {{#select data.background.increased.three}}
                        <select name="data.background.increased.three">
                          <option value="blank">{{localize "PTU.SelectNone"}}</option>
                          {{#each skills as | skill key |}}
                          <option value="{{key}}">{{skill.label}}</option>
                          {{/each}}
                        </select>
                        {{/select}}
                      </div>
                    </div>
                  </div>
                  <div class="swsh-header">
                    <div class="d-flex w-100 mt-1 mb-1">
                      <div class="col-sm-4">
                        <label for="data.background.decreased.one">{{localize "PTU.SkillDown"}} 1:</label>
                      </div>
                      <div class="col-sm-4">
                        <label for="data.background.decreased.two">{{localize "PTU.SkillDown"}} 2:</label>
                      </div>
                      <div class="col-sm-4">
                        <label for="data.background.decreased.three">{{localize "PTU.SkillDown"}} 3:</label>
                      </div>
                    </div>
                  </div>
                  <div class="swsh-body">
                    <div class="d-flex w-100 mt-1 mb-1 fs-9">
                      <div class="col-sm-4">
                        {{#select data.background.decreased.one}}
                        <select name="data.background.decreased.one">
                          <option value="blank">{{localize "PTU.SelectNone"}}</option>
                          {{#each skills as | skill key |}}
                          <option value="{{key}}">{{skill.label}}</option>
                          {{/each}}
                        </select>
                        {{/select}}
                      </div>
                      <div class="col-sm-4">
                        {{#select data.background.decreased.two}}
                        <select name="data.background.decreased.two">
                          <option value="blank">{{localize "PTU.SelectNone"}}</option>
                          {{#each skills as | skill key |}}
                          <option value="{{key}}">{{skill.label}}</option>
                          {{/each}}
                        </select>
                        {{/select}}
                      </div>
                      <div class="col-sm-4">
                        {{#select data.background.decreased.three}}
                        <select name="data.background.decreased.three">
                          <option value="blank">{{localize "PTU.SelectNone"}}</option>
                          {{#each skills as | skill key |}}
                          <option value="{{key}}">{{skill.label}}</option>
                          {{/each}}
                        </select>
                        {{/select}}
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Boss Settings -->
                <div class="swsh-box mb-2 w-100" style="text-align: center; word-break: keep-all;">
                  <div class="swsh-header">
                    <div class="d-flex w-100 mt-1 mb-1" style="font-size: 13px;">
                      <div class="col-sm-12">
                        <h3>{{localize "PTU.BossSettings"}}</h3>
                      </div>
                    </div>
                  </div>
                  <div class="swsh-header">
                    <div class="d-flex w-100 mt-1 mb-1 align-items-center">
                      <div class="col-sm-6">
                        <label for="data.boss.is">{{localize "PTU.BossIs"}}</label>
                      </div>
                      <div class="col-sm-6">
                        <label for="data.boss.turns">{{localize "PTU.BossTurns"}}</label>
                      </div>
                    </div>
                  </div>
                  <div class="swsh-body" style="display: block;">
                    <div class="d-flex w-100 mt-1 mb-1">
                      <div class="col-sm-6">
                        <input name="data.boss.is" type="checkbox" {{checked data.boss.is}} />
                      </div>
                      <div class="col-sm-6">
                        <input name="data.boss.turns" type="text" data-dtype="Number" value="{{data.boss.turns}}" />
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Pokéball -->
                <div class="swsh-box mb-2 w-100" style="text-align: center; word-break: keep-all;">
                  <div class="swsh-header">
                    <div class="d-flex w-100 mt-1 mb-1 align-items-center">
                      <div class="col-sm-12">
                        <label for="data.pokeball">{{localize "PTU.Pokeball"}}</label>
                      </div>
                    </div>
                  </div>
                  <div class="swsh-body" style="display: block;">
                    <div class="d-flex w-100 mt-1 mb-1">
                      <div class="col-sm-12">
                        <input type="text" name="data.pokeball" value="{{data.pokeball}}" data-dtype="String" />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col">
                <!-- Skills -->
                <div class="swsh-box mt-auto w-100 mb-2">
                  <div class="swsh-header skill skill-block">
                    <div class="row no-gutters header w-100">
                      <div class="col-sm-4 pt-2 pb-2">{{localize "PTU.SkillLabel"}}</div>
                      <div class="col mt-2 mb-2">{{localize "PTU.SkillMod"}}</div>
                      <div class="col-sm-3 mt-2 mb-2">{{localize "PTU.SkillRank"}}</div>
                      <div class="col-sm-2 mt-2 mb-2">{{localize "PTU.SkillValue"}}</div>
                      <div class="col mt-2 mb-2">{{localize "PTU.SkillDice"}}</div>
                    </div>
                  </div>
                  <div class="swsh-body p-0">
                    <div class="w-100 skills skill-block">
                      {{#each data.skills as |skill key|}}
                      <div class="row no-gutters {{key}} align-items-center">
                        <div class="skill {{key}} col-sm-4 bgcolor key type--{{skill.type}} align-self-center">
                          <label for="data.skills.{{key}}.label" class="resource-label">{{skill.label}}</label>
                        </div>
                        <div class="skill {{key}} col pl-1 pr-1 fs-9 center-text">
                          {{> "systems/ptu/templates/partials/mod-field.hbs"
                          path=(concat "data.skills." key ".modifier.value")
                          value=skill.modifier.value
                          dtype="Number"
                          mod=skill.modifier.mod
                          total=skill.modifier.total
                          modOrigins=(getProperty ../origins (concat "data.skills." key ".modifier.mod") )
                          disabled=true
                          flipped=(gt 8 @index)}}
                        </div>
                        <div class="skill {{key}} col-sm-3 align-self-center bgcolor skill--{{skill.rank}} center-text">
                          <label for="data.skills.{{key}}.rank" class="resource-label">{{localize (concat "PTU.Skill"
                            skill.rank)}}</label>
                        </div>
                        <div class="skill {{key}} col pl-1 fs-9 center-text">
                          {{> "systems/ptu/templates/partials/mod-field.hbs"
                          path=(concat "data.skills." key ".value.value")
                          value=skill.value.value
                          dtype="Number"
                          mod=skill.value.mod
                          total=skill.value.total
                          modOrigins=(getProperty ../origins (concat "data.skills." key ".value.mod") )
                          disabled=true
                          flipped=(gt 8 @index)}}
                        </div>
                        <div class="skill {{key}} col-sm-2 align-self-center bgcolor fs-9 center-text rollable"
                          data-roll="{{skill.value.total}}d6{{#if skill.modifier.total}}+{{skill.modifier.total}}{{/if}}"
                          data-label="{{skill.label}}">
                          <i class="fas fa-dice-d20"></i>
                          <label for="data.skills.{{key}}.value" class="resource-label">{{skill.value.total}}d6{{#if
                            skill.modifier.total}}+{{skill.modifier.total}}{{/if}}</label>
                        </div>
                      </div>
                      {{/each}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Effects Tab -->
          <div class="tab details effects" data-group="primary" data-tab="effects">
            <div class="h-100 swsh-box">
              <div class="swsh-header pl-2 effect-header">
                <h3 style="flex: 1 1 50%">{{localize "PTU.ActiveEffects"}}</h3>
                <div class="item-controls pr-1 flexcol" style="flex: 0 0 7%;">
                  <a class="item-control item-create" data-type="ActiveEffect" title="Add Effect"><i
                      class="fas fa-plus-circle" style="margin-right: 3px;"></i><span class="readable">{{localize
                      "ITEM.AddButton"}}</span></a>
                </div>
              </div>
              <div class="swsh-body pt-3 p-2">
                {{> "systems/ptu/templates/partials/active-effects.hbs"}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="sheet-footer">
    <div class="tabs">
      <ul class="sheet-tabs tabs buttons" data-group="primary">
        <li><button class="item" data-tab="stats">{{localize "PTU.TabsStats"}}</button></li>
        <li><button class="item" data-tab="moves">{{localize "PTU.TabsMoves"}}</button></li>
        <li><button class="item" data-tab="capability">{{localize "PTU.TabsCapabilities"}}</button></li>
        <li><button class="item" data-tab="combat">{{localize "PTU.TabsCombat"}}</button></li>
        <li><button class="item" data-tab="extra">{{localize "PTU.TabsExtra"}}</button></li>
        <li><button class="item" data-tab="effects">{{localize "PTU.TabsEffects"}}</button></li>
      </ul>
    </div>
  </div>
</form>